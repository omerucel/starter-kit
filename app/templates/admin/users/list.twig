{% extends "admin/layout/default.twig" %}

{% block title %}Kullanıcı Listesi{% endblock %}

{% block stylesheets %}
    <link href="{{ asset_url('/js/select2/select2.css') }}" rel="stylesheet"/>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset_url('/js/select2/select2.js') }}"></script>
    <script type="text/javascript">
        $(document).ready(function() {
            $("#roles").select2();
        });
    </script>
{% endblock %}

{% block main_content %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <header class="page-header">
                    <h1>Kullanıcı Listesi</h1>
                </header>

                {% include "admin/embed/message.twig" %}

                <form method="post" action="" onsubmit="return confirm('Silme işlemini onaylıyor musunuz?');">
                    <div class="row" style="margin-bottom: 10px;">
                        <div class="col-md-6">
                            <a href="{{ site_url('/admin/users/save') }}" class="btn btn-success"><i class="fa fa-plus"></i> Yeni Kullanıcı Ekle</a>
                            <button type="submit" class="btn btn-danger"><i class="fa fa-trash-o"></i> Seçili Elemanları Sil</button>
                        </div>
                        <div class="col-md-6">
                            <div class="pull-right">
                                <select style="width: 200px;" name="role_id" id="roles" onchange="document.location.href='{{ site_url('/admin/users') }}?role_id=' + this.value;">
                                    <option>Bir Rol Seçin</option>
                                    {% for role in all_roles %}
                                        <option value="{{ role.getId() }}" {% if role.getId() == role_id %}selected="selected"{% endif %}>{{ role.getName() }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <table class="table table-bordered">
                            <thead>
                                <th style="width: 30px;"><input type="checkbox" onchange="selectAll(this);" /></th>
                                <th>Kullanıcı Adı</th>
                                <th>Rolü</th>
                            </thead>
                            <tbody>
                                {% if pager.count() > 0 %}
                                    {% for item in pager %}
                                        <tr>
                                            <td>
                                                <input type="checkbox" name="id[]" data-select-all="1" value="{{ item.getId() }}" />
                                            </td>
                                            <td><a href="{{ site_url('/admin/users/save') }}?id={{ item.getId() }}">{{ item.getUsername() }}</a></td>
                                            <td>{{ item.getRole().getName() }}</td>
                                        </tr>
                                    {% endfor %}
                                {% else %}
                                    <tr>
                                        <td colspan="3">Herhangi kayıt bulunamadı.</td>
                                    </tr>
                                {% endif %}
                            </tbody>
                        </table>
                    </div>
                </form>

                {{ pagination_html|raw }}
            </div>
        </div>
    </div>
{% endblock %}